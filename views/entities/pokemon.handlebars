        type="text"
        placeholder="Sp. Defense"
        required=""
      />
    </div>

    <div class="form-group">
      <input
        id="baseSpeed"
        name="baseSpeed"
        type="text"
        placeholder="Speed"
        required=""
      />
    </div>

    <!-- Text input-->
    <div class="form-group">
      <input
        id="pokemonWeight"
        name="pokemonWeight"
        type="text"
        placeholder="Weight"
        required=""
      />
    </div>

    <div class="form-group">
      <input
        id="pokemonHeight"
        name="pokemonHeight"
        type="text"
        placeholder="Height"
        required=""
      />
    </div>

    <br />
    <button type="button" onclick="">Enter</button>
    <button type="button" onclick="">Search</button>
